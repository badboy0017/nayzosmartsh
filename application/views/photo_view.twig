<!DOCTYPE>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Photo</title>
    </head>

    <body>
        <header>
            Photo : <a href="/">Home</a> |
                    <a href="/photo/categorie">Categorie</a>
        </header>
            
        <div>
            <ul>
                {% for ph in res %}
                <li>
                    <img src="/uploads/{{ph.photo}}" alt={{ph.photo}} />
                    {{ ph.date_envoi }} | {{ ph.categorie }} | {{ ph.localisation }} | {{ ph.statut }} |{{ ph.etat }} |
                    <a href="/photo/supprimer/{{ ph.id }}">Supprimer</a>
                    <a href="/photo/modifier/{{ ph.id }}">modifier</a>
                    {%if ph.partage == 0%}
                    <a href="/">Partager</a>
                    {% endif %}
                </li>
                {% endfor %}
            </ul>
        </div>
    </body>
</html>


